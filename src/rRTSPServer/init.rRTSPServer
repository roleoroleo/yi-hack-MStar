#!/bin/bash

ARCHIVE=live.2019.11.22.tar.gz
SCRIPT_DIR=$(cd `dirname $0` && pwd)
cd $SCRIPT_DIR

rm -rf ./_install
rm -rf ./live

if [ ! -f $ARCHIVE ]; then
    wget http://www.live555.com/liveMedia/public/$ARCHIVE
fi
tar zxvf $ARCHIVE

patch -p0 < rRTSPServer.patch

cd live || exit 1

./genMakefiles linux-cross
cp ../Makefile.rRTSPServer Makefile
